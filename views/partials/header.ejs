<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!--FontFamily APIs-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css2?family=Yellowtail&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Monoton&display=swap" rel="stylesheet">
    <!--title-->
    <link rel="stylesheet" type="text/css" href="/style/style.css">
    <title>CVfilter</title>

  </head>
  <body>
    <!--NAVBAR-->
    <nav class="navbar navbar-expand-lg" style="background-image: url('/img/bg3.gif'); width: 100%; background-size: cover;">
      <div class="logo">
        <img src="/img/logo1.png" alt="logo" style="height: 50px; width: auto;">
      </div>

      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

        <div class="navbar-nav" p-auto m-auto align-center>
          <a class="nav-item nav-link" href="/cvfilter">Home</a>
          <% if(currentUser){ %>
            <a class="nav-item nav-link" href="/<%=currentUser.type%>">Dashboard</a>
          <% } %>
          <a class="nav-item nav-link" href="#about">About</a>
          <a class="nav-item nav-link" href="#contact">Contact us</a>
        </div>
      </div>

      <div class="log">
        <% if(!currentUser){ %>
          <a href="/register"><button class="sm-button">Signup</button></a>
          <a href="/login"><button class="sm-button">Login</button></a>
        <% } else { %>
          <a href="/logout"><button class="sm-button">Logout</button></a>
          <a href="/<%=currentUser.type%>"><button class="sm-button"><%=currentUser.username%></button></a>
        <% } %>
      </div>

    </nav>

    <div class="container">
      <% if(error && error.length > 0) { %>
          <div class="alert alert-danger mt-2" role="alert">
              <%= error %>
          </div>
      <% } %>
      <% if(success && success.length > 0) { %>
          <div class="alert alert-success mt-2" role="alert">
              <%= success %>
          </div>
      <% } %>
  </div>