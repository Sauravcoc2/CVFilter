<%- include('../partials/header') %>

<div id="joblist" class="container mt-5">
    <% jobs.slice().reverse().forEach(function(job) { %>
        <div class="d-flex justify-content-center mb-3">
            <div class="card" style="width: 50rem;">
                <div class="card-body">
                <h5 class="card-title"><strong><%= job.jobtitle %></strong></h5>
                </div>
                <ul class="list-group list-group-flush">
                <li class="list-group-item">Job Location: <%= job.location %>  </li>
                <li class="list-group-item">Language Required: <%= job.language %>  </li>
                </ul>
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <form action="/jobs/<%=job.id%>/interested" method="get">
                            <input class="btn btn-info" type="submit" value="Interested Candidated">
                        </form>
                        <form action="/jobs/<%=job.id%>/selected" method="get">
                            <input class="btn btn-success" type="submit" value="Selected Candidated">
                        </form>
                        <form action="/jobs/<%=job.id%>/delete" method="get">
                            <input class="btn btn-danger" type="submit" value="Delete Job">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>

<%- include('../partials/footer') %>