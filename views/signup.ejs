<%- include('./partials/header') %>

<div class="container" style="align-items: center; width: 80%;">
    <form action="/signup" method="POST">
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="username" >Username</label>
            <input type="text" class="form-control ml-5 pl-2" id="username" name="username" placeholder="username">
        </div>
        <br>
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="password">
        </div>
        <br>
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="email">
        </div>
        <br>
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="mobile">Mobile</label>
            <input type="text" class="form-control" id="mobile" name="mobile" placeholder="mobile">
        </div>
        <br>
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="location">Location</label>
            <input type="text" class="form-control" id="location" name="location" placeholder="location">
        </div>
        <br>
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="gender">Gender</label>
            <input type="text" class="form-control" id="gender" name="gender" placeholder="gender">
        </div>
        <br>
        <div class="form-group" style="display: flex; padding: 3px 20px;">
            <label for="age">Age</label>
            <input type="number" class="form-control" id="age" name="age" placeholder="age">
        </div>
        <br>
        <div class="form-group" id="div-language" style="display: flex; padding: 3px 20px;">
            <label for="language">Language</label>
            <input type="text" class="form-control" id="language" name="language" placeholder="language">
        </div>
        <br>
        <div class="form-group" id="div-platform" style="display: flex; padding: 3px 20px;">
            <label for="platform">Platform</label>
            <input type="text" class="form-control" id="platform" name="platform" placeholder="platform">
        </div>
        <br>
        <div class="form-group" id="div-company" style="display: flex; padding: 3px 20px;">
            <label for="company">Company</label>
            <input type="text" class="form-control" id="company" name="company" placeholder="company">
        </div>
        <br>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="type" id="developer" value="developer">
            <label class="form-check-label" for="developer">
                Developer
            </label>
          </div>
          <br>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="type" id="recruiter" value="recruiter">
            <label class="form-check-label" for="recruiter">
                Recruiter
            </label>
            <br>
          </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
</form>
</div>

<script src="/script/script.js"></script>
<%- include('./partials/footer') %>
