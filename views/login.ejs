<%- include('./partials/header') %>

<div class="containerlg p-5">
    <form action="/login" method="POST">
        
        <div class="form-group row">
            <label class="col-sm-2 col-form-label m-2" for="username"><strong>Username</strong></label>
            <div class="col-sm-10">
                <input type="text" class="form-control m-2 border-dark" id="username" name="username" placeholder="username">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label p-2 m-2" for="password"><strong>Password</strong></label>
            <div class="col-sm-10">
                <input type="password" class="form-control m-2 border-dark" id="password" name="password" placeholder="password">
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block m-2">Submit</button>

    </div>
    
</form>

<%- include('./partials/footer') %>